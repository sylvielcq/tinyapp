<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!username) { %>
    <form class="form-inline justify-content-right" action="/login" method="POST">
      <input
        class="form-control"
        type="text"
        name="username"
        placeholder="Username"
        style="width: 250px; margin: 0.5em"
      />
      <button type="submit" class="btn btn-outline-dark">Login</button>
    </form>
    <% } else { %>
      <form class="form-inline" action="/logout" method="POST">
        <p style="margin-top: 1em; padding-right: 1em; font-size:16px;">Logged in as: <%= username %>!</p>
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
    <% } %>
  </nav>
</header>