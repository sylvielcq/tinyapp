<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>
      <span class="navbar-text">
        <div class="pr-3">
          <a href="/register">Register</a>
        </div>
      </span>
      <span class="navbar-text">
        <div class="pr-3">
          <a href="/login">Login</a>
        </div>
      </span>
    <% } %>
    <% if (user) { %>
      <div>
        <div class="nav-text" style="padding-right: 1em; color:lightgray; font-weight:lighter;">
          <b>Logged in as: <%=user.email%></b>
        </div>
      </div>
      <form class="form-inline" action="/logout" method="POST">
        <button type="submit" class="btn btn-outline-light">Logout</button>
      </form>
    <% } %>
  </nav>
</header>